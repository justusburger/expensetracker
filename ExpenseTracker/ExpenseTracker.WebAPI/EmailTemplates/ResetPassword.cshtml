@model ExpenseTracker.WebAPI.ViewModels.ResetPasswordViewModel
@{
    Layout = "~/EmailTemplates/Layout.cshtml";
    ViewBag.Title = "Reset password";
}


<h3>Reset password</h3>
<p>Dear @Model.Name,<br /><br />We have recieved a request to send you a reset password link. If you requested this password reset link, please click the link below to reset your password.</p>
<p><a href="@Model.VerificationLink">@Model.VerificationLink</a></p>
<p><strong>IMPORTANT: If you did not request a reset password link, please contact support@expensetracker.co.za.</strong></p>
<p>Regards,<br />Expensetracker.co.za<br /><a href="mailto:support@expensetracker.co.za">support@expensetracker.co.za</a></p>